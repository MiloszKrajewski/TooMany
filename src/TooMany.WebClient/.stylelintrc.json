{
	"extends": [
		"stylelint-config-recommended",
		"stylelint-prettier/recommended"
	],
	"plugins": ["stylelint-prettier"],
	"rules": {
		"prettier/prettier": true,
		"at-rule-no-unknown": [
			true,
			{
				"ignoreAtRules": ["extends", "tailwind"]
			}
		],
		"block-no-empty": null,
		"unit-whitelist": ["em", "rem", "%"]
	}
}
